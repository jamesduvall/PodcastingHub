<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/jquerymobile/css", "~/Content/mediaelement/css")        
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                @*<div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Podcasts", "Index", "Podcast")</li>
                        </ul>
                    </nav>
                </div>*@
            </div>
        </header>
        <div id="body">
            <div data-role="page">                
                <div data-role="header">
                    <h1>@ViewBag.Title</h1>
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <div data-role="navbar">
                        <ul>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            @if(Request.IsAuthenticated)
                            {
                            <li>@Html.ActionLink("My Podcasts", "MyPodcasts", "Podcast")</li>
                            }
                        </ul>
                    </div>
                </div>
                <div data-role="content">
                    <a href="#leftpanel" data-role="button" data-display="overlay" data-position="left" data-dismissible="true">Show Panel</a>
                    @RenderSection("featured", required: false)
                    <section class="content-wrapper main-content clear-fix">
                        @RenderBody()
                    </section>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile", "~/bundles/mediaelement")        
        @RenderSection("scripts", required: false)
    </body>
</html>
